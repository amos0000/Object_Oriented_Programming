<Window x:Class="WindowAreaCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window Area Calculator" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Ikkunan Leveys (L):" Grid.Row="0" Margin="10"/>
        <TextBox x:Name="txtWidth" Grid.Row="0" Margin="150,0,10,10" Width="100" Height="20"/>

        <Label Content="Ikkunan Korkeus (H):" Grid.Row="1" Margin="10"/>
        <TextBox x:Name="txtHeight" Grid.Row="1" Margin="150,0,10,10" Width="100" Height="20"/>

        <Label Content="Karmipuun Leveys (W):" Grid.Row="2" Margin="10"/>
        <TextBox x:Name="txtFrameWidth" Grid.Row="2" Margin="150,0,10,10" Width="100" Height="20"/>

        <Button Content="Laske" Grid.Row="3" Margin="10" Click="CalculateButton_Click"/>

        <TextBlock x:Name="txtResults" Grid.Row="4" Margin="10"/>
    </Grid>
</Window>

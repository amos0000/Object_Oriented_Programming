<Window x:Class="ShoppingCartApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shopping Cart App" Height="450" Width="600">
    <Grid Background="LightGray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Valitse tuotteet kärryyn:" FontSize="16" Margin="0,0,0,10"/>

            <CheckBox x:Name="checkBoxProduct1" Content="Maito" Margin="0,0,0,5"/>
            <CheckBox x:Name="checkBoxProduct2" Content="LImu" Margin="0,0,0,5"/>
            <CheckBox x:Name="checkBoxProduct3" Content="Kaakao" Margin="0,0,0,5"/>
            <CheckBox x:Name="checkBoxProduct4" Content="Piimä" Margin="0,0,0,5"/>

            <Button Content="Osta" Click="BuyButton_Click" Margin="0,10,0,0"/>

            <StackPanel x:Name="stockPanel" Margin="0,20,0,0">
                <!-- Tässä näytetään tuotteet kärryssä -->
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
